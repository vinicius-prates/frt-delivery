// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Fruit {
  id String @id @default(cuid())
  name String 
  priceUnit Float
  categoryName String
  category Category @relation(fields: [categoryName], references: [id])
  description String 
}

model Category{
  id String @id @default(cuid())
  name String
  fruits Fruit[]

}